<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/white"
                android:orientation="vertical">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/layout_fields"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtPageContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="Terms and conditions"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"

                            android:gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/colorPrimary"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="Note: Please read all the terms and conditions as well as privacy policies carefully. Only use the application when you have understood all the terms in this document."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="I. GATHERING INFORMATION"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/red"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="We  gather  personal data of user."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="II. USING SUSCEPTIBLE PERMISSIONS"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/red"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="This application use susceptible permissions that is capable of gathering user's personal data."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="III. THIRD PARTY'S SERVICE"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/stream_ui_accent_red"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="To serve the function of the application, we use the service provided by a third party. This service may gather user's behavioral habits to improve its quality. We do not control this and do not take responsibility for it. If you are not comfortable with this, please do not use this software."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="IV. SECURITY AND SAFETY FOR YOUR DEVICE"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/red"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="We do gather your data so there is need for securing the data. This application do not interfere to any regular activities of other applications as well as your device."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="VI. RESPONSIBILITY"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/red"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="We take responsibility for the accuracy of the contents provided by the application. We do not take responsibility for the impact of using the knowledge to you and your life either. We also do not take responsibility for the loss of data that you added to the application if that happens."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_15sdp"
                            android:text="VI. UPDATING CONTENT"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/red"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="Content can be updated and changed without a prior notice, so you should check the terms and conditions regularly from the link provided in the software."
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".0001"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ly_checker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="start|center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/ic_check_terms"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/checkbox_selector_day"
                    android:checked="false"
                    android:button="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@string/agre_the_terms_and_conditions"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                style="@style/AccentColoredButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                android:text="@string/Agree" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBack"
                style="@style/LineColoredButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                android:text="@string/cancel" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>